<Extensions>
  <Version>1.9</Version>
  <Panel>
    <Order>1</Order>
    <PanelId>berightback</PanelId>
    <Origin>local</Origin>
    <Location>HomeScreenAndCallControls</Location>
    <Icon>Power</Icon>
    <Color>#875AE0</Color>
    <Name>Be Right Back</Name>
    <ActivityType>Custom</ActivityType>
    <Page>
      <Name>Be right back</Name>
      <Row>
        <Name>Row</Name>
        <Widget>
          <WidgetId>widget_1</WidgetId>
          <Name>Set a virtual background while you are away from the device</Name>
          <Type>Text</Type>
          <Options>size=4;fontSize=small;align=left</Options>
        </Widget>
      </Row>
      <Row>
        <Name>Set mode</Name>
        <Widget>
          <WidgetId>berightback_img</WidgetId>
          <Type>GroupButton</Type>
          <Options>size=4;columns=3</Options>
          <ValueSpace>
            <Value>
              <Key>coffee</Key>
              <Name>☕️ Coffee</Name>
            </Value>
            <Value>
              <Key>eating</Key>
              <Name>🍴 Eating</Name>
            </Value>
            <Value>
              <Key>kids</Key>
              <Name>🙉 Kids</Name>
            </Value>
            <Value>
              <Key>badhair</Key>
              <Name>👩‍🎤 Bad Hair</Name>
            </Value>
            <Value>
              <Key>toilet</Key>
              <Name>🚽 Toilet</Name>
            </Value>
            <Value>
              <Key>none</Key>
              <Name>⛔️ None</Name>
            </Value>
          </ValueSpace>
        </Widget>
      </Row>
      <Row>
        <Name>Row</Name>
        <Widget>
          <WidgetId>widget_2</WidgetId>
          <Name>Note: Your self view is mirrored, but far end sees the text correctly.</Name>
          <Type>Text</Type>
          <Options>size=4;fontSize=small;align=left</Options>
        </Widget>
      </Row>
      <Options>hideRowNames=1</Options>
    </Page>
  </Panel>
</Extensions>
