<Extensions>
  <Version>1.8</Version>
  <Panel>
    <Order>5</Order>
    <PanelId>quietmode</PanelId>
    <Origin>local</Origin>
    <Type>Home</Type>
    <Icon>Home</Icon>
    <Color>#1D805E</Color>
    <Name>Quiet Mode</Name>
    <ActivityType>Custom</ActivityType>
    <Page>
      <Name>Quiet Mode</Name>
      <Row>
        <Name>Mode</Name>
        <Widget>
          <WidgetId>quiet-mode</WidgetId>
          <Type>GroupButton</Type>
          <Options>size=4</Options>
          <ValueSpace>
            <Value>
              <Key>off</Key>
              <Name>Not Quiet</Name>
            </Value>
            <Value>
              <Key>on</Key>
              <Name>Quiet</Name>
            </Value>
          </ValueSpace>
        </Widget>
        <Widget>
          <WidgetId>quietmodeinfo</WidgetId>
          <Name>Quiet mode will prevent incoming calls, turn off notifications and sounds, not auto-wake up the display etc.</Name>
          <Type>Text</Type>
          <Options>size=4;fontSize=small;align=left</Options>
        </Widget>
      </Row>
      <Options>hideRowNames=0</Options>
    </Page>
    <Page>
      <Name>Schedule</Name>
      <Row>
        <Name>Scheduled</Name>
        <Widget>
          <WidgetId>quietmodescheduled</WidgetId>
          <Type>ToggleButton</Type>
          <Options>size=1</Options>
        </Widget>
      </Row>
      <Row>
        <Name>Start Quiet Mode</Name>
        <Widget>
          <WidgetId>quietmodeend</WidgetId>
          <Type>Spinner</Type>
          <Options>size=3</Options>
        </Widget>
      </Row>
      <Row>
        <Name>End Quiet Mode</Name>
        <Widget>
          <WidgetId>quietmodestart</WidgetId>
          <Type>Spinner</Type>
          <Options>size=3</Options>
        </Widget>
      </Row>
      <Options/>
    </Page>
    <Page>
      <Name>Screen Saver</Name>
      <Row>
        <Name>Use Photo Frame</Name>
        <Widget>
          <WidgetId>quietmode-screensaver</WidgetId>
          <Type>ToggleButton</Type>
          <Options>size=1</Options>
        </Widget>
      </Row>
      <Row>
        <Name>Info</Name>
        <Widget>
          <WidgetId>quietmode-screensaver-info</WidgetId>
          <Name>Photo frame shows curated photos while your device is in half wake (digital signage)</Name>
          <Type>Text</Type>
          <Options>size=3;fontSize=small;align=left</Options>
        </Widget>
      </Row>
      <Row>
        <Name/>
        <Widget>
          <WidgetId>quietmode-halfwake</WidgetId>
          <Name>Activate half wake</Name>
          <Type>Button</Type>
          <Options>size=3</Options>
        </Widget>
      </Row>
      <Options/>
    </Page>
  </Panel>
</Extensions>
